        "strict": true,
        "declaration": true,
        "removeComments": true,
        "outDir": "./build/",
        "target": "ES5",
        "lib": ["ES2019"],
        "moduleResolution": "node",
        "sourceMap": false
    },
    "include": [
        "app/server/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}

{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "removeComments": true,
        "declaration": true,
        "outDir": "./build/",
        "target": "es5",
        "lib": ["es6", "dom"],
        "moduleResolution": "node",
        "sourceMap": true
    },
    "include": [
      "app/client/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
